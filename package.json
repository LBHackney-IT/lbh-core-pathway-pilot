{
  "name": "lbh-molten-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "run-s build:*",
    "build:prisma": "prisma generate",
    "build:app": "next build",
    "start": "next start -p $PORT",
    "typecheck": "tsc",
    "db:push": "prisma db push --accept-data-loss",
    "db:seed": "prisma db seed --preview-feature",
    "cypress:open": "cypress open",
    "cypress": "NEXT_PUBLIC_ENV=test NODE_ENV=test run-p dev cypress:open",
    "test": "jest",
    "lint": "eslint ./ --ext js,jsx,ts,tsx --fix",
    "import:csv": "node jobs/import-csv",
    "import:contentful": "run-s import:contentful:*",
    "import:contentful:forms": "node jobs/import-contentful",
    "import:contentful:next-steps": "node jobs/import-next-steps-contentful",
    "check": "run-s typecheck lint test",
    "deploy": "serverless deploy --stage $ENVIRONMENT"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^0.5.3",
    "@prisma/client": "^2.30.0",
    "@reach/dialog": "^0.16.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.3.1",
    "csvtojson": "^2.0.10",
    "diff": "^5.0.0",
    "downshift": "^6.1.3",
    "formik": "^2.2.9",
    "lbh-frontend": "^3.5.3",
    "luxon": "^2.0.1",
    "next": ">=11.1.1",
    "next-auth": "^3.27.3",
    "notifications-node-client": "^5.1.0",
    "query-string": "^7.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "restana": "^4.9.1",
    "sass": "^1.36.0",
    "serve-static": "^1.14.1",
    "serverless-http": "^2.7.0",
    "swr": "^0.5.6",
    "yup": "^0.32.9"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/luxon": "^2.0.0",
    "@types/node": "^16.4.8",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "contentful-management": "^7.31.0",
    "cypress": "^8.3.0",
    "dotenv": "^8.6.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prisma": "^2.30.0",
    "serverless": "^2.59.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "14"
  }
}
